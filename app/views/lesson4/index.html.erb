<script type="text/javascript">
  var app = angular.module("lesson4", []);
  app.controller("Ctrl1", function($scope){
    $scope.name1 = "Vo Tai Tri"
  });

  app.controller("Ctrl2", function($scope){
    $scope.quantity = 0;
    $scope.cost = 1;
  });

  app.controller("Ctrl3", function($scope){
    $scope.names_arr = [{firstName: "Phil", lastName: "Jones"},
                        {firstName: "Ashley", lastName: "Young"},
                        {firstName: "David", lastName: "Degea"},
                        {firstName: "Chris", lastName: "Smalling"},
                        {firstName: "Luke", lastName: "Shaw"}];
  });
</script>